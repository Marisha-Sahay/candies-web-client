<h1>Create New Candy</h1>

<%= form_tag "/candies", method: :post do %>

<div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
</div>
<div>
  <%= label_tag :price %>
  <%= text_field_tag :price %>
</div>
<div>
  <%= label_tag :expiry %>
  <%= text_field_tag :expiry %>
</div>
<%= submit_tag "Create Candy" %>

<% end %>